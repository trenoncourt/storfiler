{
  "Host": {
    "UseIis": true
  },
  "Kestrel": {
    "AddServerHeader": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": ["FromLogContext"]
  },
  "Storfiler": {
    "Storages": [
      {
        "Resource": "GDET",
        "Endpoint": {
          "IsRegex": true,
          "Provider": {
            "Directory": "C:\\logs"
          }
        },
        "Methods": [
          {
            "Verb": "Get",
            "Path": "/files",
            "Action": "List"
          },
          {
            "Verb": "Get",
            "Path": "/files/download",
            "Action": "Download",
            "Query": "filename"
          },
          {
            "Verb": "Post",
            "Path": "/upload",
            "Action": "Add"
          },
          {
            "Verb": "Get",
            "Path": "/download",
            "Query": "path",
            "Action": "Download",
            "IsFullPath": true
          },
          {
            "Verb": "Delete",
            "Path": "/files",
            "Action": "Remove",
            "Query": "filename"
          },
          {
            "Verb": "Get",
            "Path": "/files/search",
            "Pattern": "{fileName}*",
            "Query": "filename",
            "Action": "Search"
          }
        ]
      }
    ]
  }
}